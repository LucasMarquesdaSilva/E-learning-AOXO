@model Fatec.Treinamento.Web.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}
<div class="content-login">
    <h2 class="title-login">Login</h2>
    <div class="row">
        <div class="col-md-12">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Usuario", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4 class="title-login">Faça Login para ter acesso aos nossos cursos!</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="panel panel-default panel-login">
                        <div class="panel-body panel-body-login">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></div>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                                    @Html.PasswordFor(m => m.Senha, new { @class = "form-control", @placeholder = "Senha" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.CheckBoxFor(m => m.ManterConectado)
                                @Html.LabelFor(m => m.ManterConectado)
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Entrar" class="btn btn-default btn-login" />
                            </div>
                            <div class="form-group">
                                @Html.ActionLink("Não é registrado?", "Registrar")
                            </div>
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
