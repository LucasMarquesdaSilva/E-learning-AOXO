@model Fatec.Treinamento.Model.Trilha

@{
    ViewBag.Title = "Cursos Vinculados";
}



<div>
    <div class="row">
        <div class="col-lg-offset-0">
            <h3>
                @Html.DisplayFor(model => model.Nome)
            </h3>
        </div>
    </div>
    <hr />




    @foreach (var item in Model.Cursos)
    {
        <div class="row">
            <div class="col-lg-5">
                <h4>
                    Curso:  @Html.ActionLink(item.Nome, "Detalhes", "Curso", new { id = item.Id }, null)
                </h4>

            </div>
            <div class="col-lg-5">
                @for (int i = 0; i < item.Classificacao; i++)
                {
                    <span class="glyphicon glyphicon-star estrela-classificacao"></span>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-lg-5">
                Data de Criação: @item.DataCriacao.ToString("dd/MM/yyyy")
            </div>
            <div class="col-lg-5">
                Autor: @Html.DisplayFor(modelItem => item.Autor)
            </div>
        </div>

            <div class="row">


            </div>


            <hr />


    }

</div>
<p>

    @Html.ActionLink("Back to List", "Index")
</p>
