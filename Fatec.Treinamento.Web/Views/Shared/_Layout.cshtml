@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Fatec Treinamentos</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container navbar-container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand " href='@Url.Action("Index","Home")'>
                    <span class="glyphicon glyphicon-education" aria-hidden="true"></span>
                    <span class="aoxo"><span class="a">&Delta;</span><span class="o">O</span><span class="x">X</span><span class="q">&#9744</span></span>
                </a>
            </div>
            <div class="navbar-collapse collapse">

                @using (Html.BeginForm("Pesquisar", "Curso", FormMethod.Post, new { @class = "navbar-form navbar-left home-search-form", role = "form" }))
                {
                    <div class="form-group">
                        <div class="input-group">
                            <input id="txtPesquisaCurso" name="txtPesquisaCurso" type="text" class="form-control" placeholder="Procurar Curso...">
                            <span class="input-group-btn">
                                <button class="btn btn-primary btn-search" type="button"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                            </span>
                        </div>
                    </div>
                }

                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Populares", "Populares", "Curso")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Cursos <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            @{
                                Html.RenderAction("MenuAssuntos", "Home");
                            }
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Trilhas", "Index", "Trilha")</li>

                   
                </ul>

                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav navbar-right">

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <span class="glyphicon glyphicon-user"></span> &nbsp;&nbsp; @User.Identity.GetUserName() <span class="caret"></span>
                            </a>
                                
                            <ul class="dropdown-menu">
                                @if (this.User.IsInRole("Administrador")){

                                <li>@Html.ActionLink("Painel Admin", "Index", "Admin")</li>
                                
                                }

                                @if (this.User.IsInRole("Instrutor"))
                                {

                                    <li>@Html.ActionLink("Painel Instrutor", "Index", "Instrutor")</li>
                                    <li role="separator" class="divider"></li>

                                }
                                @if (this.User.IsInRole("Usuario"))
                                {
                                    <li>@Html.ActionLink("Painel Usuario", "Index", "Usuario")</li>
                                    <li>@Html.ActionLink("Meus Treinamentos", "MeusCursos", "Usuario")</li>
                                    <li>@Html.ActionLink("Meus Pontos", "MeusPontos", "Usuario")</li>
                                     <li role="separator" class="divider"></li>
                                }

                                <li>@Html.ActionLink("Sair", "LogOff", "Usuario")</li>
                            </ul>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Entrar", "Login", "Usuario")</li>
                        <li class="active">@Html.ActionLink("Registrar", "Registrar", "Usuario")</li>
                    </ul>
                }

            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()

    </div>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="detalhes-rodape">
                        <h4>Empresa</h4>
                        <ul class="li-footer">
                            <li><a href="#">Sobre a empresa</a></li>
                            <li><a href="#">Empresas cadastradas</a></li>
                            <li><a href="#">Equipe de desenvolvedores</a></li>
                            <li><a href="#">Blog</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="detalhes-rodape">
                        <h4>Suporte</h4>
                        <ul class="li-footer">
                            <li><a href="#">Dúvidas</a></li>
                            <li><a href="#">Ajuda sobre cadastro</a></li>
                            <li><a href="#">Termos e condições de uso</a></li>
                            <li><a href="#">Política de privacidade</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="detalhes-rodape">
                        <h4>Nossas redes sociais</h4>
                        <ul class="li-footer li-footer-icones">
                            <li>
                                <a class="btn btn-social-icon btn-facebook">
                                    <span class="fa fa-facebook"></span>
                                </a>
                            </li>
                            <li>
                                <a class="btn btn-social-icon btn-twitter">
                                    <span class="fa fa-twitter"></span>
                                </a>
                            </li>
                            <li>
                                <a class="btn btn-social-icon btn-vimeo">
                                    <span class="fa fa-vimeo"></span>
                                </a>
                            </li>
                            <li>
                                <a class="btn btn-social-icon btn-google">
                                    <span class="fa fa-google"></span>
                                </a>
                            </li>
                            <li>
                                <a class="btn btn-social-icon btn-linkedin">
                                    <span class="fa fa-linkedin"></span>
                                </a>
                            </li>
                            <li>
                                <a class="btn btn-social-icon btn-github">
                                    <span class="fa fa-github"></span>
                                </a>
                            </li>
                            <li>
                                <a class="btn btn-social-icon btn-bitbucket">
                                    <span class="fa fa-bitbucket"></span>
                                </a>
                            </li>
                        </ul>

                    </div>  
                </div>
                <div class="col-md-12 copyright-footer">
                    &copy; @DateTime.Now.Year - AOXO. Todos os direitos reservados.
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
